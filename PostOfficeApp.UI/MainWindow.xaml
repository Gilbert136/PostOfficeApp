<Window x:Class="PostOfficeApp.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PostOfficeApp.UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="360" Width="690">
    <Grid>
        <Label x:Name="label" Content="Search:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Button x:Name="button" Content="Search" HorizontalAlignment="Left" Margin="592,13,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="23" Margin="63,13,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="524" KeyDown="textBox_KeyDown"/>
        <DataGrid x:Name="dataGrid" HorizontalAlignment="Left" Height="248" Margin="10,41,0,0" VerticalAlignment="Top" Width="657"/>
        <Label x:Name="label1" Content="Total Records: ???" HorizontalAlignment="Left" Margin="10,294,0,0" VerticalAlignment="Top"/>
        <Button x:Name="button1" Content="Open" HorizontalAlignment="Left" Margin="592,300,0,0" VerticalAlignment="Top" Width="75" Click="button1_Click"/>

    </Grid>
</Window>
